@model IEnumerable<SMTIStudent_ProjectManagement.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-button {
        background-color: #FFC107;
        border-color: #FFC107;
        color: black;
        margin: 0 auto;
    }

    .custom-button:hover {
        background-color: darkgoldenrod;
        border-color: darkgoldenrod;
        color: white;
    }
</style>

<h2 style="text-align: center; margin-top: 50px;">Users</h2>
<br>

<div class="text-center">
    <a href="@Url.Action("Create")" class="btn btn-default custom-button">Create a New User</a>
</div>
<br>
<br>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Username
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            User Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                **********
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { style = "color: darkgoldenrod;" }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { style = "color: darkgoldenrod;" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { style = "color: darkgoldenrod;" })
            </td>
        </tr>
     }
</table>
