@model IEnumerable<SMTIStudent_ProjectManagement.Models.ProjectAssignment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-button {
        background-color: #FFC107;
        border-color: #FFC107;
        color: black;
        margin: 0 auto;
    }

    .custom-button:hover {
        background-color: darkgoldenrod;
        border-color: darkgoldenrod;
        color: white;
    }
</style>

<h2 style="text-align: center; margin-top: 50px;">Assign Projects</h2>
<br>

<div class="text-center">
    <a href="@Url.Action("Create")" class="btn btn-default custom-button">Create a New Project Assignment</a>
</div>
<br>
<br>

@using (Html.BeginForm("Search", "ProjectAssignments", FormMethod.Get))
 {
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-2">
                <label for="studentId" class="mr-sm-2"><strong>Search by Student Id:</strong></label>
            </div>
            <div class="col-md-3">
                @Html.DropDownList("studentId", null, htmlAttributes: new { @class = "form-control" })
            </div>


            <div class="col-md-2">
                <label for="projectId" class="mr-sm-2"><strong>Search by Project Id:</strong></label>
            </div>
            <div class="col-md-3">
                @Html.DropDownList("projectId", null, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary mb-2 custom-button">Search</button>
            </div>
        </div>
    </div>
    <br>
 }

<table class="table">
    <tr>
        <th>
            Submitted Date
        </th>
        <th>
            Project Title
        </th>
        <th>
            Student Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubmittedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProjectAssignmentId }, new { style = "color: darkgoldenrod;" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProjectAssignmentId }, new { style = "color: darkgoldenrod;" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProjectAssignmentId }, new { style = "color: darkgoldenrod;" })
            </td>
        </tr>
     }
</table>
