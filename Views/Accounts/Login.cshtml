@model SMTIStudent_ProjectManagement.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-button {
        background-color: #FFC107;
        border-color: #FFC107;
        color: black;
        margin: 0 auto;
    }

    .custom-button:hover {
        background-color: darkgoldenrod;
        border-color: darkgoldenrod;
        color: white;
    }
</style>

<div class="welcome-image">
    <img src="../images/system-image.jpg" alt="Welcome image" style="max-width: 30%; display: block; margin: 50px auto 0 auto;" />
</div>

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="col-md-2">
            <br>
            <h1 style="text-align: center;">Login</h1>
            <br>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <br>

            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br>

            <div class="form-group text-center">
                <br>
                <input type="submit" value="Login" class="btn btn-default custom-button" />
            </div>
        </div>
    </div>

    <div class="text-center">
        <br>
        @Html.ActionLink("Don't have an account? Sign Up", "Signup", null, new { style = "color: black;" })
        <br>
        <br>
    </div>
 }
